---
// Import global styles
import '../styles/global.css';

// Import Header and Footer components
import Main from "../layouts/Main.astro";

//import Footer from '../components/Footer.astro';

// Get the pageTitle prop
const { pageTitle } = Astro.props;
---
<Main title="krafi.info - Blog">
  <h1>{pageTitle}</h1>
  <slot />
</Main>
<style>
  /* Add to your global.css or a dedicated CSS file */
#searchBar {
  width: 100%;
  padding: 10px;
  margin-bottom: 20px;
  font-size: 16px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.grid-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}

.grid-item {
  width: 100%;
  max-width: 300px;
}

</style>